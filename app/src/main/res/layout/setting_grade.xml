<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="사용자 학년 설정"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/userGradeRadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.755" />

    <RadioGroup
        android:id="@+id/userGradeRadioGroup"
        android:layout_width="382dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toTopOf="@+id/userSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/btn_grade1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1학년"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="310dp" />

        <RadioButton
            android:id="@+id/btn_grade2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2학년"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="342dp" />

        <RadioButton
            android:id="@+id/btn_grade3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3학년"
            android:textSize="20sp" />

    </RadioGroup>

    <Button
        android:id="@+id/userSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="userSaveClicked"
        android:text="저장"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424" />


</androidx.constraintlayout.widget.ConstraintLayout>