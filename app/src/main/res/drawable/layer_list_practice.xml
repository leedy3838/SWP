<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="100dp" android:width="100dp">
        <shape>
            <solid android:color="@color/purple_200" />
        </shape>
    </item>

    <item android:height="80dp" android:width="80dp" android:gravity="center">
        <shape>
            <solid android:color="@color/purple_500"/>
        </shape>
    </item>

    <item android:height="60dp" android:width="60dp" android:gravity="center">
        <shape>
            <solid android:color="@color/teal_200"/>
        </shape>
    </item>

    <item android:height="40dp" android:width="40dp" android:gravity="center">
        <shape>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>

