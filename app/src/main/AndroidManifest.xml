<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.androidstudioproject">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher4"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher4_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidStudioProject"
        tools:targetApi="31">
        <!--  처음 시작하는 화면을 설정 -->
        <!--  android:theme="@style/Theme.Design.Light.NoActionBar" 액션바 제거 -->
        <activity
            android:name=".StartActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".AccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessbilityService"/>
            </intent-filter>
            <meta-data
                android:name="android.AccessibilityService"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <activity android:name=".UnlockQnA"/>
        <activity android:name=".AppPassWordActivity"/>
        <activity android:name=".RetryProblemScreen" />
        <activity android:name=".RetryProblemSelectScreen" />
        <activity android:name=".SettingScreen" />
        <activity android:name=".HelpScreen" />
        <activity android:name=".ProblemSolveScreen" />
        <activity android:name=".ProblemSolveNextScreen" />
        <activity android:name=".TodaySolveScreen" />
        <activity android:name=".TodaySolvedNextScreen" />
        <activity android:name=".WrongProblemScreen" />
        <activity android:name=".WrongProblemNextScreen" />
        <activity android:name=".SettingTime"/>
        <activity android:name=".SettingPassword"/>
        <activity android:name=".SettingQnA"/>
        <activity android:name=".SettingUser"/>
        <activity
            android:name=".BasicScreen"
            android:exported="true">
        </activity>
    </application>

</manifest>